@model ActivosModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrap mt-5 p-3">
    <div class="main">
        <div class="container-fluid overflow-hidden">
            <div class="row g-0">
                <div class="col-12">
                    <div class="card-header bg-secondary"><h3 class="text-white">Agregar Activo</h3></div>
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <form asp-action="AgregarActivo" asp-controller="Activos">
                                    <div class="row g-5 p-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="nombreActivo" class="form-label">Nombre de activo:</label>
                                                <input asp-for="nombreActivo" type="text" class="form-control">
                                                <span asp-validation-for="nombreActivo" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label for="serie" class="form-label">Serie:</label>
                                                <input asp-for="serie" type="text" class="form-control">
                                                <span asp-validation-for="serie" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label for="idResponsable" class="form-label">Responsable:</label>
                                                <select asp-for="idResponsable" id="idResponsable" class="form-control">
                                                    <option value="">Seleccionar...</option>
                                                    <option value="1">[Responsable 1]</option>
                                                    <option value="2">[Responsable 2]</option>
                                                </select>
                                                <span asp-validation-for="idResponsable" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6 d-flex flex-column">
                                            <div class="mb-3">
                                                <label for="placa" class="form-label">Placa:</label>
                                                <input asp-for="placa" type="text" class="form-control">
                                                <span asp-validation-for="placa" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label for="descripcion" class="form-label">Descripción:</label>
                                                <input asp-for="descripcion" type="text" class="form-control">
                                                <span asp-validation-for="descripcion" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label for="idDepartamento" class="form-label">Departamento:</label>
                                                <select asp-for="idDepartamento" id="idDepartamento" class="form-control">
                                                    <option value="">Seleccionar...</option>
                                                    <option value="1">Tecnologías de Información</option>
                                                    <option value="2">Recursos Humanos</option>
                                                </select>
                                                <span asp-validation-for="idDepartamento" class="text-danger"></span>
                                            </div>
                                            <div class="d-flex align-self-end mt-2">
                                                <button type="submit" class="btn btn-primary">Agregar</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#idResponsable, #idDepartamento').select2({
            placeholder: "Seleccionar...",
            allowClear: true // deseleccionar
        });
    });
</script>