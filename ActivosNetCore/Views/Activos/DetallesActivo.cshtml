@model ActivosModel;

<div class="content-wrap mt-5 p-3">
    <div class="main">
        <div class="container-fluid overflow-hidden">
            <div class="row g-0">
                <div class="col-12">
                    <div class="card-header bg-secondary"><h3 class="text-white">Detalles</h3></div>
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row g-5 p-3 mb-4 border-bottom">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Nombre del Activo:</label>
                                        <input type="text" class="form-control" asp-for="nombreActivo" placeholder="Activo" readonly />
                                        <h1 class="text-primary">@Model.nombreActivo</h1>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Serie:</label>
                                        <input type="text" class="form-control" asp-for="serie" placeholder="Serie" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Responsable:</label>
                                        <input type="text" class="form-control" asp-for="nombreResponsable" placeholder="Responsable" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6 d-flex flex-column">
                                    <div class="mb-3">
                                        <label class="form-label">Placa:</label>
                                        <input type="text" class="form-control" asp-for="placa" placeholder="Placa" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Descripción:</label>
                                        <input type="text" class="form-control" asp-for="descripcion" placeholder="Descripcion" readonly />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Departamento:</label>
                                        <input type="text" class="form-control" asp-for="nombreDepartamento" placeholder="Departamento" readonly />
                                    </div>
                                    <div class="d-grid gap-5 align-self-end mt-3">
                                        <button type="button" class="btn btn-dark" id="btnEliminar">Eliminar</button>
                                        <a type="button" class="btn btn-secondary text-white" href="@Url.Action("EditarActivo","Activos", new { IdActivo = Model.idActivo})">Editar</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




