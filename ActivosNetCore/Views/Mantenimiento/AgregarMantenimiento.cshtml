@model ActivosNetCore.Models.MantenimientoModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrap mt-5 p-3">
    <div class="main">
        <div class="container-fluid overflow-hidden">
            <div class="row g-0">
                <div class="col-12">
                    <div class="card-header bg-secondary"><h3 class="text-white">Solicitar Mantenimiento</h3></div>
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <form asp-action="AgregarMantenimiento" asp-controller="Mantenimiento" method="post">

                                <div class="mb-3">
                                    <label asp-for="Detalle" class="form-label">Detalle</label>
                                    <textarea asp-for="Detalle" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Detalle" class="text-danger"></span>
                                </div>

                                <!-- Dropdown de Activos -->
                                <div class="mb-3">
                                    <label asp-for="IdActivo" class="form-label">Activo</label>
                                    <select asp-for="IdActivo" class="form-control" asp-items="(SelectList)ViewBag.ListaActivos">
                                        <option value="">-- Seleccione un activo --</option>
                                    </select>
                                    <span asp-validation-for="IdActivo" class="text-danger"></span>
                                </div>

                                <input type="hidden" asp-for="IdResponsable" />
                                <input type="hidden" asp-for="IdUsuario" />

                                <button type="submit" class="btn btn-success">Guardar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
