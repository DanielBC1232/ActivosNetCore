@model UsuarioModel;
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="authincation h-100 d-flex align-items-center justify-content-center" style="min-height: 80vh">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="authincation-content p-4 shadow-sm rounded">
                    <div class="auth-form">
                        <h3 class="text-center mb-4 text-primary">Iniciar sesión</h3>
                        <hr class="text-secondary pb-4"/>
                        @if (ViewBag.Msj != null)
                        {
                            <div class="alert alert-danger text-center">
                                @ViewBag.Msj
                            </div>
                        }
                        <form method="post" asp-action="IniciarSesion" asp-controller="Login">
                            <div class="mb-3">
                                <label class="form-label"><strong>Correo electrónico</strong></label>
                                <input asp-for="correo" type="email" class="form-control" name="correo" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-start"><strong>Contraseña</strong></label>
                                <input asp-for="contrasenna" type="password" class="form-control" name="contrasenna" required>
                            </div>
                            <div class="d-flex justify-content-between mt-3 mb-3">
                                <div>
                                    <a class="text-decoration-none" href="@Url.Action("RecuperarContrasenna","Login")">¿Olvidaste la contraseña?</a>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
